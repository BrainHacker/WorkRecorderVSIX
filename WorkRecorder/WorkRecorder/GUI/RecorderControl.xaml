<UserControl x:Class="Community.WorkRecorder.RecorderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.10.0"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="WorkRecorderWindow"
             Background="{DynamicResource {x:Static vsfx:VsBrushes.ToolWindowBackgroundKey}}"
             UseLayoutRounding="True">
    <StackPanel Orientation="Vertical">
        <Button Name="recordButton" Click="onRecordButtonClick"
                Margin="20" Padding="8"
                Height="50"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="recordButtonImage" RenderOptions.BitmapScalingMode="HighQuality" Source="..\Resources\Play_button.png" />
                <TextBlock x:Name="recordButtonText" Padding="8" HorizontalAlignment="Center" VerticalAlignment="Center">Rec</TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>        
</UserControl>
